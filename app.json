{
  "name": "SubTrack",
  "displayName": "SubTrack",
  "expo": {
    "name": "SubTrack",
    "slug": "subtrack",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1",
      "dark": {
        "image": "./src/assets/images/splash-dark.png",
        "backgroundColor": "#121212"
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.subtrack.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "SubTrack uses the camera to scan receipts and bills",
        "NSPhotoLibraryUsageDescription": "SubTrack needs access to your photo library to save and attach receipt images",
        "NSFaceIDUsageDescription": "SubTrack uses Face ID to securely protect your financial data",
        "NSMicrophoneUsageDescription": "SubTrack uses microphone for voice commands feature",
        "NSLocationWhenInUseUsageDescription": "SubTrack may use location for currency conversion based on region",
        "UIBackgroundModes": [
          "fetch",
          "remote-notification",
          "processing"
        ],
        "CFBundleAllowMixedLocalizations": true
      },
      "associatedDomains": [
        "applinks:subtrack.app"
      ],
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundImage": "./src/assets/images/adaptive-background.png",
        "backgroundColor": "#6366F1"
      },
      "package": "com.subtrack.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.INTERNET",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "subtrack.app",
              "pathPrefix": "/subscription"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./src/assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "deploymentTarget": "13.0"
          },
          "android": {
            "compileSdkVersion": 33,
            "targetSdkVersion": 33,
            "buildToolsVersion": "33.0.0",
            "enableProguardInReleaseBuilds": true,
            "extraMavenRepos": [
              "../../node_modules/@notifee/react-native/android/libs"
            ]
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SubTrack to access your camera to scan receipts and bills.",
          "microphonePermission": "Allow SubTrack to access your microphone for voice commands.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you attach receipt images."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./src/assets/images/notification-icon.png",
          "color": "#6366F1",
          "sounds": [
            "./src/assets/sounds/notification.wav",
            "./src/assets/sounds/payment-reminder.wav",
            "./src/assets/sounds/budget-alert.wav"
          ],
          "androidMode": "collapse",
          "androidCollapsedTitle": "New SubTrack Notification"
        }
      ],
      [
        "expo-localization",
        {
          "locales": [
            "en",
            "si",
            "ta"
          ]
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true
        }
      ],
      [
        "expo-updates",
        {
          "username": "your-expo-username",
          "enabled": true
        }
      ],
      "@config-plugins/react-native-blob-util",
      "@config-plugins/react-native-pdf",
      "@config-plugins/react-native-voice"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      },
      "api": {
        "currency": "https://api.exchangerate-api.com/v4/latest/",
        "ocr": "https://api.ocr.space/parse/image",
        "subscriptionData": "https://api.subtrack.app/services",
        "ai": "https://api.openai.com/v1"
      },
      "featureFlags": {
        "aiInsights": true,
        "receiptScanner": true,
        "voiceCommands": true,
        "gamification": true,
        "billSplitting": true,
        "freeTrialManager": true,
        "subscriptionMarketplace": true,
        "biometricAuth": true,
        "cloudBackup": true,
        "offlineMode": true,
        "widgets": true,
        "darkMode": true,
        "multiLanguage": true
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-project-id",
      "fallbackToCacheTimeout": 0
    },
    "newArchEnabled": false
  }
}